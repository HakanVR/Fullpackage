<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <move element="page.main.title" destination="product.info.price" after="product.info.stock.sku"/>
    <move element="product.info.review" destination="product.info.price" after="product.price.final"/>
    <move element="product.info.social" destination="product.info.form.options" after="product.info.options.wrapper.bottom"/>
    <move element="product.info.overview" destination="product.info.form.options" before="-"/>
    <move element="catalog.product.related" destination="columns" after="-"/>
    <move element="product.info.upsell" destination="columns" after="-"/>
</page>
